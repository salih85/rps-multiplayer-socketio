<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RPC Multiplayer | FIND THE CHAMP</title>
    <!-- Premium Typography -->
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/script.js" defer></script>
    <link rel="stylesheet" href="/css/style.css">
</head>


<body>

    <!-- Main Game Section -->
    <main id="gameSection" style="display: none;">
        <header class="text-center mb-5">
            <h1>FIND THE CHAMP</h1>
            <p id="roomDisplay" class="text-muted"></p>
        </header>

        <div class="game-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
            <!-- Player One (You) -->
            <div class="player-card glass-panel text-center" id="card1">
                <h3 id="p1Name" class="text-gradient">Player 1</h3>
                <div class="score-display" id="score1">0</div>
                <img src="/image/rock.png" alt="Your Move" id="i1" class="player-img">

                <div id="controls" class="choice-container">
                    <button class="choice-btn" onclick="playerChoose('rock')">
                        <img src="/image/rock.png" alt="Rock">
                        <span>ROCK</span>
                    </button>
                    <button class="choice-btn" onclick="playerChoose('paper')">
                        <img src="/image/paper.png" alt="Paper">
                        <span>PAPER</span>
                    </button>
                    <button class="choice-btn" onclick="playerChoose('scissor')">
                        <img src="/image/scissors.png" alt="Scissor">
                        <span>SCISSOR</span>
                    </button>
                </div>
            </div>

            <!-- Player Two (Opponent) -->
            <div class="player-card glass-panel text-center" id="card2">
                <h3 id="p2Name" class="text-gradient">Opponent</h3>
                <div class="score-display" id="score2">0</div>
                <img src="/image/rock.png" alt="Opponent Move" id="i2" class="player-img">
                <div class="status-box mt-4">
                    <p id="opponentStatus" class="text-info">Waiting for opponent move...</p>
                </div>
            </div>
        </div>

        <footer class="text-center mt-5">
            <div class="glass-panel" style="display: inline-block; padding: 1rem 3rem;">
                <h4 id="currentRound">Round: 0/20</h4>
            </div>
        </footer>
    </main>

    <!-- Welcome / Join Lobby Overlay -->
    <section id="overlay">
        <div class="modal-content-custom glass-panel">
            <h1>WELCOME</h1>
            <h2 class="text-gradient mb-4">CHAMPIONS 2025</h2>
            <div class="form-group mb-4">
                <input type="text" id="n1" class="custom-input" placeholder="Enter Your Name">
            </div>
            <button class="premium-btn w-100" onclick="startGame()">JOIN LOBBY</button>
        </div>
    </section>

    <!-- Matchmaking Overlay -->
    <section id="waitingOverlay" style="display: none;">
        <div class="modal-content-custom glass-panel">
            <h1 class="mb-3">MATCHMAKING</h1>
            <p class="text-muted mb-4">Searching for a worthy opponent...</p>
            <div class="spinner-container">
                <div class="spinner-border text-warning" style="width: 3rem; height: 3rem;"></div>
            </div>
        </div>
    </section>

    <!-- Game Over Overlay -->
    <section id="gameOverOverlay" style="display: none;">
        <div class="modal-content-custom glass-panel">
            <h1 id="winner" class="mb-5">GAME OVER</h1>
            <button onclick="location.reload()" class="premium-btn">PLAY AGAIN</button>
        </div>
    </section>

</body>

</html>